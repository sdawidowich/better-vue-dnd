{
  "name": "@better-vue-dnd/monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "run-s type-check build:packages build-only",
    "preview": "vite preview",
    "build:packages": "pnpm --filter better-vue-dnd build",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@vueuse/core": "^13.3.0",
    "better-vue-dnd": "workspace:*",
    "gsap": "^3.13.0",
    "lucide-vue-next": "^0.525.0",
    "mitt": "^3.0.1",
    "pinia": "^3.0.3",
    "tailwindcss": "^4.1.8",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "~10.0.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.5.3",
    "typescript": "~5.8.0",
    "vite": "^7.0.2",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vue-tsc": "^2.2.8"
  }
}